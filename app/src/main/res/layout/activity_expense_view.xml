<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ExpenseView">

    <View
        android:id="@+id/my_rectangle4"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#FF8000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/my_rectangle6"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="#95DAC437"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/mode_of_sort"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        app:layout_constraintBottom_toBottomOf="@+id/my_rectangle4"
        app:layout_constraintEnd_toStartOf="@+id/chart"
        app:layout_constraintStart_toEndOf="@+id/back_b"
        app:layout_constraintTop_toTopOf="@+id/my_rectangle4"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/chart"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/button"
        app:backgroundTint="#13AF6F"
        android:text="@string/Graphic"
        app:layout_constraintBottom_toBottomOf="@+id/my_rectangle4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_rectangle4"
        tools:ignore="TouchTargetSizeCheck" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date"
        app:layout_constraintBottom_toTopOf="@+id/my_rectangle6" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_rectangle4" />

    <TextView
        android:id="@+id/start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#171717"
        app:layout_constraintBottom_toTopOf="@+id/listOfDb"
        app:layout_constraintEnd_toStartOf="@+id/date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_rectangle4"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#171717"
        app:layout_constraintBottom_toTopOf="@+id/list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toEndOf="@+id/date"
        app:layout_constraintTop_toBottomOf="@+id/my_rectangle4"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/my_rectangle6"
        app:layout_constraintEnd_toEndOf="@+id/my_rectangle6"
        app:layout_constraintStart_toStartOf="@+id/my_rectangle6"
        app:layout_constraintTop_toTopOf="@+id/my_rectangle6" />

    <Button
        android:id="@+id/back_b"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="2dp"
        app:backgroundTint="#FF8000"
        android:background="@drawable/button"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="@+id/my_rectangle4"
        app:layout_constraintStart_toStartOf="@+id/my_rectangle4"
        app:layout_constraintTop_toTopOf="@+id/my_rectangle4"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>