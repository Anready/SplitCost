<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/back"
    android:layout_height="match_parent"
    tools:context=".add.Income">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/my_rectangle2"
                android:layout_width="match_parent"
                android:layout_height="385dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="52dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/baks"
                android:backgroundTint="@color/backTint"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_rectangle3" />

            <View
                android:id="@+id/my_rectangle3"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="#35B753"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="10dp"
                android:text="@string/Date"
                app:layout_constraintStart_toStartOf="@+id/my_rectangle2"
                app:layout_constraintTop_toTopOf="@+id/my_rectangle2" />

            <TextView
                android:id="@+id/time_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/Time"
                app:layout_constraintEnd_toEndOf="@+id/my_rectangle2"
                app:layout_constraintTop_toTopOf="@+id/my_rectangle2" />

            <TextView
                android:id="@+id/date_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:gravity="left"
                android:text=""
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/my_rectangle2"
                app:layout_constraintTop_toBottomOf="@+id/date_v" />

            <TextView
                android:id="@+id/time_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="20dp"
                android:gravity="left"
                android:text=""
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/my_rectangle2"
                app:layout_constraintTop_toBottomOf="@+id/time_v" />

            <EditText
                android:id="@+id/amount_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="@string/Sum"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="@+id/my_rectangle2"
                app:layout_constraintStart_toStartOf="@+id/my_rectangle2"
                app:layout_constraintTop_toBottomOf="@+id/amount_v"
                tools:ignore="TouchTargetSizeCheck" />

            <Spinner
                android:id="@+id/category_e"
                android:layout_width="217dp"
                android:layout_height="41dp"
                android:layout_marginTop="12dp"

                app:layout_constraintEnd_toEndOf="@+id/my_rectangle2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/my_rectangle2"
                app:layout_constraintTop_toBottomOf="@+id/category_v"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/category_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="@string/Category"
                app:layout_constraintEnd_toEndOf="@+id/my_rectangle2"
                app:layout_constraintStart_toStartOf="@+id/my_rectangle2"
                app:layout_constraintTop_toTopOf="@+id/my_rectangle2" />

            <TextView
                android:id="@+id/amount_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/amount"
                app:layout_constraintEnd_toEndOf="@+id/my_rectangle2"
                app:layout_constraintStart_toStartOf="@+id/my_rectangle2"
                app:layout_constraintTop_toBottomOf="@+id/category_e" />

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:backgroundTint="#35B753"
                android:text="@string/Save"
                app:layout_constraintEnd_toEndOf="@+id/my_rectangle2"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="@+id/my_rectangle2"
                app:layout_constraintTop_toBottomOf="@+id/calculator" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AddPlus"
                android:textColor="#000000"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="@+id/my_rectangle3"
                app:layout_constraintEnd_toEndOf="@+id/my_rectangle3"
                app:layout_constraintStart_toStartOf="@+id/my_rectangle3"
                app:layout_constraintTop_toTopOf="@+id/my_rectangle3" />

            <Button
                android:id="@+id/delete_category"
                android:layout_width="96dp"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#35B753"
                android:text="@string/Change"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/my_rectangle2"
                app:layout_constraintStart_toEndOf="@+id/category_e"
                app:layout_constraintTop_toBottomOf="@+id/category_v"
                tools:ignore="TouchTargetSizeCheck" />

            <View
                android:id="@+id/my_rectangle5"
                android:layout_width="105dp"
                android:layout_height="29dp"
                android:layout_marginTop="-10dp"
                android:background="@drawable/error"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_rectangle3" />

            <TextView
                android:id="@+id/textView46"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/error"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/my_rectangle5"
                app:layout_constraintEnd_toEndOf="@+id/my_rectangle5"
                app:layout_constraintStart_toStartOf="@+id/my_rectangle5"
                app:layout_constraintTop_toTopOf="@+id/my_rectangle5" />

            <Button
                android:id="@+id/calculator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/calculator"
                android:textAllCaps="false"
                app:backgroundTint="#ffffff"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/my_rectangle2"
                app:layout_constraintStart_toStartOf="@+id/my_rectangle2"
                app:layout_constraintTop_toBottomOf="@+id/amount_e" />

            <Button
                android:id="@+id/back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="2dp"
                app:backgroundTint="#FF8000"
                android:background="@drawable/button"
                android:text="@string/back"
                app:layout_constraintBottom_toBottomOf="@+id/my_rectangle3"
                app:layout_constraintStart_toStartOf="@+id/my_rectangle3"
                app:layout_constraintTop_toTopOf="@+id/my_rectangle3"
                tools:ignore="TouchTargetSizeCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>