<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".view.chart.Chart">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/my_rectangle"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="#13AF6F"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart"
                android:layout_width="0dp"
                android:layout_height="400dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_rectangle" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:text="@string/Chart"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="@+id/my_rectangle"
                app:layout_constraintEnd_toEndOf="@+id/my_rectangle"
                app:layout_constraintStart_toStartOf="@+id/my_rectangle"
                app:layout_constraintTop_toTopOf="@+id/my_rectangle"
                app:layout_constraintVertical_bias="0.842" />

            <Button
                android:id="@+id/button28"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/button"
                app:backgroundTint="#FF8000"
                android:text="@string/back"
                app:layout_constraintBottom_toBottomOf="@+id/my_rectangle"
                app:layout_constraintStart_toStartOf="@+id/my_rectangle"
                app:layout_constraintTop_toTopOf="@+id/my_rectangle"
                tools:ignore="TouchTargetSizeCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>